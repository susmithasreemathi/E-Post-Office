<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFD8D8"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="Update User Contact detail"/>

 <EditText
     android:id="@+id/emailedttxt"
     android:layout_margin="8dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="email"
     android:textColorHint="@color/black"
     android:textSize="22dp"/>
    <EditText
        android:id="@+id/nameedttxt"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Paneer selvam"
        android:textColorHint="@color/black"
        android:textSize="22dp"/>
    <EditText
        android:id="@+id/testedttxt"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="test"
        android:textColorHint="@color/black"
        android:textSize="22dp"/>
    <EditText
        android:id="@+id/phnoedttxt"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="9876543210"
        android:textColorHint="@color/black"
        android:textSize="22dp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="save"
        android:background="#FA5A27"
        android:layout_margin="8dp"/>
</LinearLayout>